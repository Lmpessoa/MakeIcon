<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

   <SolidColorBrush x:Key="WindowBackground" Color="#FFF6F6FA"/>
   <SolidColorBrush x:Key="WindowBorder" Color="#FFCCCEDB"/>
   <SolidColorBrush x:Key="IconBorder" Color="#FFE6E6E6"/>

   <SolidColorBrush x:Key="ButtonHoverBackground" Color="#FFE6E6E6"/>
   <SolidColorBrush x:Key="ButtonClickBackground" Color="#FFCCCCCC"/>
   
   <SolidColorBrush x:Key="ButtonText" Color="#FF0F0F0F"/>
   <SolidColorBrush x:Key="ButtonHoverText" Color="#FF0F0F0F"/>
   <SolidColorBrush x:Key="ButtonClickText" Color="Black"/>

   <SolidColorBrush x:Key="SaveAsBackground" Color="#FFF0F0F6"/>
   <SolidColorBrush x:Key="SaveAsHoverBackground" Color="#FFEAEAF0"/>
   <SolidColorBrush x:Key="SaveAsPressedBackground" Color="#FFE2E2E8"/>

</ResourceDictionary>
