<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

   <SolidColorBrush x:Key="WindowBackground" Color="#FF2D2D30"/>
   <SolidColorBrush x:Key="WindowBorder" Color="#FFA2A2A2"/>
   <SolidColorBrush x:Key="IconBorder" Color="#FF3D3D41"/>

   <SolidColorBrush x:Key="ButtonHoverBackground" Color="#FF3F3F41"/>
   <SolidColorBrush x:Key="ButtonClickBackground" Color="#FF4F4F52"/>
   
   <SolidColorBrush x:Key="ButtonText" Color="#FFF1F1F1"/>
   <SolidColorBrush x:Key="ButtonHoverText" Color="#FFF1F1F1"/>
   <SolidColorBrush x:Key="ButtonClickText" Color="White"/>

   <SolidColorBrush x:Key="SaveAsBackground" Color="#FF28282A"/>
   <SolidColorBrush x:Key="SaveAsHoverBackground" Color="#FF323238"/>
   <SolidColorBrush x:Key="SaveAsPressedBackground" Color="#FF434348"/>

</ResourceDictionary>
